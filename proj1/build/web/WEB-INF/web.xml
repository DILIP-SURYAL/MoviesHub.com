<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignUP</servlet-name>
        <servlet-class>com.proj1.Servlets.SignUP</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.proj1.Servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logOut</servlet-name>
        <servlet-class>com.proj1.Servlets.logOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Update_profile</servlet-name>
        <servlet-class>com.proj1.Servlets.Update_profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPost</servlet-name>
        <servlet-class>com.proj1.Servlets.AddPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Likes</servlet-name>
        <servlet-class>com.proj1.Servlets.Likes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUP</servlet-name>
        <url-pattern>/SignUP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logOut</servlet-name>
        <url-pattern>/logOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update_profile</servlet-name>
        <url-pattern>/Update_profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPost</servlet-name>
        <url-pattern>/AddPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Likes</servlet-name>
        <url-pattern>/Likes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
           100
        </session-timeout>
    </session-config>
</web-app>
